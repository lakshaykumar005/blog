<%- include("./partials/header.ejs") %>

<% if(locals.blogsdata) { %>
    <div class="container col-xxl-8 px-4 py-5">
        <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
          <div class="col-10 col-sm-8 col-lg-6">
            <img src="https://kawaiiai.com/wp-content/uploads/2022/09/gangaster-cat-7.jpg" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
          </div>
          <div class="col-lg-6">
            <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3"><%= blogsdata.btitle %></h1>
            <p class="end"> posted on - <%= blogsdata.btime %> by - <%= blogsdata.bname %> </p>
            <p><%= blogsdata.bblog %></p> 
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
              <button type="button" class="btn btn-primary btn-lg px-4 me-md-2" onclick="location.href='/edit'">Update</button>
              <button type="button" class="btn btn-outline-secondary btn-lg px-4" onclick="location.href='/delete'">Delete</button>
            </div>
          </div>
        </div>
      </div>
  <% } else { %>
    <h1>No,Data found so, please post the blog You want</h1>
    <img class="profile" src="https://live.staticflickr.com/4058/4576439746_022810e567_b.jpg" alt="cat profile">
    <% } %>
<%- include("./partials/footer.ejs") %>